buildah from registry.access.redhat.com/ubi8/ubi-init
buildah info
buildah run ubi-init-working-container -- yum -y install httpd --disablerepo=*beta*
buildah run ubi-init-working-container -- systemctl enable httpd
buildah copy ubi-init-working-container index.html /var/www/html/index.html
buildah config --port 80 --cmd "/usr/sbin/init" ubi-init-working-container
buildah commit ubi-init-working-container el-httpd
podman images
podman run -d -p 80:80 el-httpd
podman ps
buildah inspect localhost/el-httpd
podman stop -a

buildah from scratch
scratchmnt=$(buildah mount working-container)
echo ${scratchmnt}
ls -l ${scratchmnt}
yum install --installroot ${scratchmnt} httpd --releasever 8 --setopt=module_platform_id="platform:el8" -y
chroot ${scratchmnt} systemctl enable httpd
ls -l ${scratchmnt}
cp index.html ${scratchmnt}/var/www/html/index.html
buildah unmount working-container
buildah config --port 80 --cmd "/usr/sbin/init" working-container
buildah commit working-container el-httpd

podman images
podman run -d -p 80:80 el-httpd
podman ps
curl localhost
buildah inspect localhost/el-httpd
